<Page x:Class="DemoEx.ManagerMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoEx"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagerMenuPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.Row="0" Content="Меню менеджера"/>
        <StackPanel  Grid.Column="1" Grid.Row="1">
            <Button Content="Редактирование исполнителей заявки" Click="InvoiceExecutorsEditButtonClick"/>
            <Button Content="Редактирование сроков выполнения заявки" Click="InvoiceFinishDateEditButtonClick"/>
            <Button Content="Выход" Click="ExitButtonClick"/>
        </StackPanel>
    </Grid>
</Page>
