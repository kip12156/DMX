<Page x:Class="DemoEx.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoEx"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.Row="0" Content="Авторизация"/>
        <StackPanel  Grid.Column="1" Grid.Row="1">
            <Label Content="Введите логин"/>
            <TextBox x:Name="logintextbox"/>
            <Label Content="Введите пароль"/>
            <PasswordBox x:Name="passwordBox"/>
            <Button Content="Войти" Click="LoginButtonClick"/>

        </StackPanel>
    </Grid>
</Page>
