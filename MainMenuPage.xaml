<Page x:Class="DemoEx.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoEx"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.Row="0" Content="Главное меню"/>
        <StackPanel  Grid.Column="1" Grid.Row="1">
            <Button Content="Создание заявки" Click="InvoiceCreationButtonClick"/>
            <Button Content="Редактирование заявки" Click="InvoiceEditButtonClick"/>
            <Button Content="Список заявок" Click="InvoicesListButtonClick"/>
            <Button Content="Статистика" Click="StatisticsButtonClick"/>
            <Button Content="Обратная связь" Click="FeedbackButtonClick"/>
            <Button Content="Выход" Click="ExitButtonClick"/>
        </StackPanel>
    </Grid>
</Page>
